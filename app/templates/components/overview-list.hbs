<div class="panel panel-primary">
	<div class="panel-body">
		<h1>Trading Hub for {{activeAccount}}</h1>
		<table class="table">
			<tbody>
				<tr>
					{{#each model as |item|}}
					<td>
						Funds:
					</td>
					<td>
						<strong>£{{item.FUNDS}}</strong>
					</td>
					<td>
						Margin:
					</td>
					<td>
						<strong>£{{item.MARGIN}}</strong>
					</td>
					<td>
						Equity:
					</td>
					<td>
						<strong>£{{item.EQUITY}}</strong>
					</td>
					<td>
						Available:
					</td>
					<td>
						<strong>£{{item.AVAILABLE_TO_DEAL}}</strong>
					</td>
					<td>
						PNL:
					</td>
					<td>
						<strong>£{{item.PNL}}</strong>
					</td>
					{{/each}}
				</tr>
			</tbody>
		</table>
	</div>
</div>
