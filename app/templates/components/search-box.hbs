<div class="jumbotron search col-md-12">
  <h2>Please enter a search term</h2>
  <div class="row">
    <div id="custom-search-input">
      <div class="input-group col-md-12">
        {{input type="text" value=market class="search-query form-control" placeholder="Search" key-up="search"}}
        <span class="input-group-btn">
          <button class="btn btn-danger search" type="button">
          <span class="glyphicon glyphicon-search"></span>
          <button type="button" class="btn btn-success watchlists-button" {{action "viewWatchlist"}}>Watchlists</button>
        </button>
        </span>
      </div>
    </div>
  </div>
</div>
<div class="list-group flex-con">
  {{#each watchlists as |list|}}
    <a class="list-group-item flexable" {{action "viewWatchlistMarkets" list.id}}>{{list.name}}</a>
  {{/each}}
</div>
