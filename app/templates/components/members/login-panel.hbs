{{#if hasResponseMessage}}
  <div class="alert alert-danger text-center">
     Invalid login. Please try again.
  </div>
{{/if}}

<form {{action 'login' on="submit"}}>
  <div class="form-group has-feedback {{if validUsername 'has-success'}}">
    {{input type="text" value=username id="username" class="form-control" placeholder="Username"}}
    {{#if validUsername}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
  </div>
  <div class="form-group has-feedback {{if validPassword 'has-success'}}">
    {{input type="password" value=password id="password" class="form-control" placeholder="Password"}}
    {{#if validPassword}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
  </div>
  <div class="form-group has-feedback {{if validapi 'has-success'}}">
    {{input type="text" value=api id="api" class="form-control" placeholder="API Key"}}
    {{#if validapi}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <input type="submit" disabled={{isDisabled}} id="login-submit" class="form-control btn btn-login" value="Log In">
      </div>
    </div>
  </div>
</form>
