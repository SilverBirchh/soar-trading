<div class="col-lg-12">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title"><strong>{{type}}</strong></h3>
		</div>
		<div class="panel-body">
			<table class="table">
				<thead>
					<tr>
						<td>
							Market
						</td>
						<td>
							Period
						</td>
						<td>
							Size
						</td>
						<td>
							Profit/Loss (GBP)
						</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					{{#each model as |item|}}
						<tr id= {{item.position.dealId}}>
							<td>
								{{item.market.instrumentName}}
							</td>
							<td>
								{{item.market.expiry}}
							</td>
							<td>
								{{item.position.direction}} {{item.position.dealSize}}
							</td>
							<td>
								Â£{{item.marketData.pnl}}
							</td>
							<td>
								<form class="form-inline hidden">
									<div class="form-group">
										{{input type="number" class="form-control" placeholder="Size" autofocus="autofocus"}}
										<button type="button" class="btn btn-primary">Confirm</button>
										<button type="button" class="btn btn-primary glyphicon glyphicon-remove" {{action 'toggleClass' item.position}}></button>
									</div>
								</form>
								<form class="form-inline">
									<div class="form-group">
										<button type="button" class="btn btn-primary" {{action 'toggleClass' item.position}}>Close</button>
									</div>
								</form>
							</td>
						</tr>
						{{else}}
							<td colspan="8" class="alert alert-warning col-sm-8 text-center">
								You have no {{type}}. Head to
								{{#link-to 'account.search' tagName="a" }}Search and Deal{{/link-to}} and make some!
							</td>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>
